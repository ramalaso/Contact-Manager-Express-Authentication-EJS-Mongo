<div class="row">
    <div class="col-md-6">
        <h1>Edit contact</h1>
        <form action="/contacts/<%= contact.id %>?_method=put" method="POST">
            <div class="form-group">
                <label for="fullname">Full name</label>
                <input type="text" name="fullname" class="form-control" value=<%- contact.name %>>
            </div>
            <div class="form-group">
                <label for="job">Job Position</label>
                <input type="text" name="job" class="form-control" value=<%= contact.job %>>
            </div>
            <div class="form-group">
                <label for="nickname">Nick Name</label>
                <input type="text" name="nickname" class="form-control" value=<%= contact.nickname %>>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-control" value=<%= contact.email %>>
            </div>
            <button class="btn btn-primary">Edit contact</button>
        </form>
    </div>
    <div class="col-md-6">
        <h2>Notes</h2>
        <form action="/contacts/<%= contact.id %> " method="POST">
            <dl>
                <% if (contact.notes) { %>
                <% contact.notes.forEach(note => { %>
                <dt><%= moment(note.postedDate).fromNow()%> </dt>
                <dd><%= note.note %> </dd>
                <% }) %>
                <% } %>
            </dl>
            <div class="form-group">
                <label for="notes"></label>
                <textarea name="notes" id="notes" cols="30" rows="10" class="form-control"></textarea>
            </div>
            <button class="btn btn-primary" type="submit" value="addnote">Add note</button>
        </form>
    </div>
</div>